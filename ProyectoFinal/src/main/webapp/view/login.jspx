<?xml  version="1.0" encoding="UTF-8" ?>
<jsp:root xmlns:jsp="http://java.sun.com/JSP/Page"
          xmlns="http://www.w3.org/1999/xhtml"
          xmlns:s="/struts-tags"
          xmlns:c="http://java.sun.com/jsp/jstl/core"
          version="2.0">
    <jsp:directive.page  contentType="text/html; charset=UTF-8"/>
    <html>
    <head>
        <title><s:text name="" /></title>
        <style>
            table.list
            {
                border-collapse:collapse;
                width: 40%;
            }
            table.list, table.list td, table.list th
            {
                border:1px solid gray;
                padding: 5px;
            }
        </style>
    </head>
    <body>

    <H1><s:text name="title.login" /></H1>
	<s:if test="hasActionErrors()">
		<s:actionerror />
	</s:if>
    <s:form method="post" action="create"  >

        <s:textfield key="user.name"  />
        <s:textfield key="user.email" />
        <s:textfield key="user.password"  />
        <s:submit key="label.submit" />

    </s:form>


    <h3>Users</h3>
    <c:if  test="${!empty users}">
        <table class="list">
            <tr>
                <th align="left">Nombre</th>
                <th align="left">Email</th>
                <th align="left">Contrase√±a</th>
                <th align="left">Actions</th>
            </tr>
            <c:forEach items="${users}" var="user">
                <tr>
                    <td>${user.name} </td>
                    <td>${user.email}</td>
                    <td>${user.password}</td>
                    <td><a href="delete/${user.id}">delete</a></td>
                </tr>
            </c:forEach>
        </table>
    </c:if>

    </body>
    </html>
</jsp:root>
